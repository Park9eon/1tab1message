{
  "name": "1Tab1Message",
  "version": "0.0.2",
  "description": "탭을 열면 메시지가 나옵니다.",
  "homepage_url": "https://park9eon.com",
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "quiet9.noise@gmail.com"
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "128": "logo@128.png",
    "16": "logo@16.png",
    "32": "logo@32.png",
    "48": "logo@48.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "chrome_style": true
  }
}
